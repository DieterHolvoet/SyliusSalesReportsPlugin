{% import "@SyliusAdmin/Common/Macro/money.html.twig" as money %}

<h3>{{ 'monsieur_biz_sales_reports.ui.average_report'|trans }}</h3>
<p>
    {{ 'monsieur_biz_sales_reports.ui.number_of_orders'|trans }}
    <b>{{ average_sales_result.number_of_elements }}</b>
</p>
<table class="ui celled table">
    <thead>
    <tr>
        <th>{{ 'monsieur_biz_sales_reports.view.amount_without_tax' | trans }}</th>
        <th>{{ 'monsieur_biz_sales_reports.view.promo_amount_without_tax' | trans }}</th>
        <th>{{ 'monsieur_biz_sales_reports.view.shipping_amount_without_tax' | trans }}</th>
        <th>{{ 'monsieur_biz_sales_reports.view.tax_amount' | trans }}</th>
        <th>{{ 'monsieur_biz_sales_reports.view.total_amount' | trans }}</th>
    </tr>
    </thead>
    <tbody>
    <tr>
        <td>{{ money.format(average_sales_result.without_tax_total, channel.baseCurrency.code) }}</td>
        <td>{{ money.format(average_sales_result.without_tax_promo_total, channel.baseCurrency.code) }}</td>
        <td>{{ money.format(average_sales_result.without_tax_shipping_total, channel.baseCurrency.code) }}</td>
        <td>{{ money.format(average_sales_result.tax_total, channel.baseCurrency.code) }}</td>
        <td>{{ money.format(average_sales_result.total, channel.baseCurrency.code) }}</td>
    </tr>
    </tbody>
</table>
